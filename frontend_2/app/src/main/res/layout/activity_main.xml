<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".br.senai.collabtrack.client.activity.MainActivity">

    <ImageButton
        android:id="@+id/imageButtonMonitor"
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_above="@+id/imageButtonPerigo"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/imageButtonPerigo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonMonitor"
        app:srcCompat="@mipmap/ic_launcher_perigo"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/imageButtonSeguro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/imageButtonPerigo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButtonPerigo"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/ic_launcher_normalidade"
        android:background="@null"/>
</RelativeLayout>
