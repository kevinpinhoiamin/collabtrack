<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".br.senai.collabtrack.client.activity.VoiceActionActivity">

    <ImageButton
        android:id="@+id/imgBtnReplay"
        android:layout_width="350dp"
        android:layout_height="301dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_play"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/imgBtnNao"
        android:scaleType="fitXY"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnReplay"
        app:srcCompat="@mipmap/ic_launcher_perigo"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imgBtnReplay"
        android:layout_alignStart="@+id/imgBtnReplay"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/imgBtnSim"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/ic_launcher_normalidade"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imgBtnReplay"
        android:layout_alignEnd="@+id/imgBtnReplay"
        android:background="@null"/>

</RelativeLayout>
